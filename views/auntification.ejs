<head>
    <link href="/css/style.css" rel="stylesheet" type="text/css">
    <script src="https://www.google.com/recaptcha/api.js" async defer></script>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!--Import materialize.css-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">

    <!--Let browser know website is optimized for mobile-->
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
</head>
<body class="deep-purple darken-1">
    <div class="aunt_block  hoverable ">
        <form id="my_captcha_form" action="/aunt" method="POST">
            <div class="input-field col s6">
                <label for="name">Введіть нікнейм: </label>
                <input placeholder='Нікнейм' required id="name" type="text" name="name">
            </div>
            <div class="input-field col s6">
                <label for="pas">Введіть пароль: </label>
                <input placeholder='Пароль' required id="pas" type="password" name="pas" >
            </div>
            <div  class="g-recaptcha" data-callback="imNotARobot" data-sitekey="6Lfr_WAfAAAAAEjLFki03jrkBtKpHYPgVr4ia4-h" ></div>
            <div class="row">
                <button id=" btn" class=" btn waves-effect waves-light" type="submit">Війти</button>
                
                <a class=" waves-effect waves-light btn" href="/restration">Зареєструватись</a>
            </div>
            
        </form>
        
        <script type="text/javascript">
            document.getElementById("my_captcha_form").addEventListener("submit",function(evt){
            
            var response = grecaptcha.getResponse();
            if(response.length == 0) 
            { 
                //reCaptcha not verified
                alert("please verify you are humann!"); 
                evt.preventDefault();
                return false;
            }
            });
         
        </script>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
</body>

